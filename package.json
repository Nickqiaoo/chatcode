{
  "name": "tg-claudecode-bot",
  "version": "1.0.0",
  "description": "Telegram bot for Claude Code integration",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "DEBUG=* tsx src/main.ts",
    "watch": "tsc --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.63",
    "@gramio/format": "^0.3.3",
    "@gramio/split": "^0.0.1",
    "@modelcontextprotocol/sdk": "^1.17.0",
    "diff": "^8.0.2",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "markdown-it": "^14.1.0",
    "marked": "^16.1.1",
    "node-fetch": "^3.3.2",
    "p-queue": "^8.1.0",
    "redis": "^5.6.1",
    "simple-git": "^3.28.0",
    "strip-ansi": "^7.1.0",
    "telegraf": "^4.16.3",
    "telegram-format": "^3.1.0",
    "ws": "^8.18.3",
    "zod": "^4.0.13"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/markdown-it": "^14.1.2",
    "@types/marked": "^6.0.0",
    "@types/node": "^22.17.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "telegram",
    "bot",
    "claude-code",
    "typescript"
  ],
  "author": "nickqiao",
  "license": "MIT"
}