# Telegram Bot Configuration
TG_BOT_TOKEN=your_telegram_bot_token_here

# Bot Mode: polling or webhook
BOT_MODE=polling

# MCP Configuration
MCP_PORT=3001

# Storage Configuration
WORK_DIR=/tmp/tg-claudecode
SESSION_TIMEOUT=7d

# Use Redis (default)
STORAGE_TYPE=redis
REDIS_URL=redis://localhost:6379

# Workers Configuration (optional, for file viewing)
WORKERS_ENABLED=false
WORKERS_ENDPOINT=https://your-workers-endpoint.com
WORKERS_API_KEY=your_workers_api_key_here

# Security Configuration (Secret Protection)
SECURITY_SECRET_REQUIRED=true
SECURITY_SECRET_TOKEN=your_secret_token_here

# Claude Code Configuration
CLAUDE_CODE_PATH=claude

# (TODO) Webhook Configuration (only required if BOT_MODE=webhook)
# WEBHOOK_DOMAIN=https://your-domain.com
# WEBHOOK_PORT=3000
# WEBHOOK_PATH=/webhook
# WEBHOOK_SECRET=your_optional_secret_token